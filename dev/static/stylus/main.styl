// Подключаем стили библиотек
@import '_libs.styl'

// Подключаем переменные
@import '_vars.styl'

// Подключаем спрайты (просто раскоментируем импорт при появлении PNG спрайтов)
// @import '_sprite.styl'

// Подключаем миксины
@import '_mixins.styl'

html 
  line-height 1
  font-size 14px

body
  font-family mainFont
  margin 0

h1,h2,h3,h4,h5,h6
  margin 0

ul,li
  margin 0
  padding 0
  list-style-type none
  
p
  margin 0
  
a
  text-decoration none
  color black

audio,
canvas,
iframe,
img,
svg,
video
  vertical-align middle
  
textarea
  resize none

section
  position relative
  margin-bottom 0

input,
select,
button
  outline none

*, *:before, *:after
  box-sizing border-box
  
.hide
  display none
  
.show
  display block
  
::-moz-selection 
  background: #b3d4fc;
  text-shadow: none;
  
::selection 
  background: #b3d4fc;
  text-shadow: none;
  
.clearfix:before,
.clearfix:after 
  content: " ";
  display: table;

.clearfix:after 
  clear: both;

.clearfix 
  *zoom: 1;

.container
  position relative
  width 100%
  max-width 1400px
  margin 0 auto

.header__section  
  h2
    font-size 48px 
    font-family mainFont
    color: dark-blue
    text-transform uppercase
    letter-spacing: .2em
    text-align center 
    font-size 48px 
  img
    margin: 25px auto 0
    display block
  .header__description
    margin: 25px auto 0
    max-width 780px
    p
      font-size 18px
      font-family: mainFont
      color: #91a5ac
      text-align center 
      line-height: 35px
      letter-spacing normal

