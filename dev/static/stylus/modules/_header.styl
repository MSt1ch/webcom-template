header
	background: dark-blue
	height: 120px
	width 100%
	text-align center
	position: fixed
	top -10px
	z-index: 3000
	.container
		height 100%
	.wrap
		display flex
		justify-content space-between
		height 100%	
.logo
	display flex
	align-items center
	min-width 230px	
.main-nav__list
	height 100%
	display flex
	justify-content space-between
	max-width 940px
	//display none
	li
		display inline-block
		margin-right 20px
		max-height 100%
		min-width 140px
		transition all .25s ease
		&.last
			margin-right 0	
		
	a
		display flex
		align-items center
		justify-content: center
		width 100%
		height 100%	
		text-transform uppercase
		color #fff
		transition color .25s ease
		letter-spacing: .1em
		&.active, &:hover
			
			background #1e292f
			border-bottom 4px solid accent
			color: #6b848c
		&.active	
			cursor default

.tel-number__list
	display flex
	flex-direction: column	
	justify-content center
	align-items flex-end
	font-family: boldFont
	width 230px
	width 100%
	li
		margin-bottom 25px
		display inline-block
		
		a
			color accent
			font-size 24px
			transition color .25s ease

		&.last
			margin-bottom 0	
		&:hover
			a
				color #fff	
				

