.navbar
	position fixed
	right 20px
	top 50%
	z-index: 1000
	.navbar__list
		width 100%
		height 100%
		text-align center
		li
			a
				display block
				margin: 10px 0
				height 20px
				width 20px
				border-radius: 50%
				background-color: #a5abae
				&.active
					background-color: accent
					cursor default
.button_up
	position fixed
	display none
	bottom 5px
	right 5px
	width 60px
	height 60px
	border-radius: 10px
	border: 2px solid accent
	z-index: 1000
	text-align center		
	i
		font-size 40px
		padding-top 5px
		color: accent
					


.mobile-menu
	position fixed
	display none
	top 0
	bottom 0
	left 0
	right 0
	background-color: rgba(0, 0, 0, .6)
	z-index: 3000
	transition all .25s ease
	align-items center
	&.show
		display flex
		transition all .25s ease
		
	.mobile-menu__list
		display block
		width 100%
		transition all .25s ease
		li
			display block
			margin: 10px 0
			text-align center
			a
				display block
				padding-top: 20px
				padding-bottom: 20px
				color: #fff
				font-size 30px
				font-family: mainFont
				transition all .25s ease
				text-transform uppercase
				&:hover
					background-color: rgba(255, 130, 7, .6)
					color: #000
					
.mobile-buttton
	display none
	width 60px
	height 45px
	position fixed
	right 20px
	top 40px
	transform s("rotate(%s)", 0deg)
	transition .5s ease-in-out
	cursor pointer
	z-index: 40000

.mobile-buttton span
	display block
	position absolute
	height 5px
	width 100%
	background accent
	border-radius 9px
	opacity 1
	left 0
	transform s("rotate(%s)", 0deg)
	transition .25s ease-in-out


.mobile-buttton
	span
		&:nth-child(1)
			top 0px
			transform-origin left center
		&:nth-child(2)
			top 18px
			transform-origin left center
		&:nth-child(3)
			top 36px
			transform-origin left center
	&.open
		z-index: 40000
		span
			&:nth-child(1)
				transform s("rotate(%s)", 45deg)
				top -3px
				left 8px
			&:nth-child(2)
				width 0%
				opacity 0
			&:nth-child(3)
				transform s("rotate(%s)", -45deg)
				top 39px
				left 8px
					