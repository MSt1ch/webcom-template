.main-footer
	padding-top 55px
	padding-bottom 70px
	background-color: dark-blue
	background-size: cover
	.container__footer
		display flex
		justify-content: space-between
		flex-wrap wrap
		letter-spacing .06em
		color: #fff
		h3
			font-size 16px
			font-family: boldFont
			color #fff
			text-transform uppercase	
		.main-footer__social, .main-footer__address
			img
				display inline-block
				margin: 45px auto 20px
		.main-footer__logo
			text-align left
			img
				display inline-block
				&.separator
					display block
					margin: 25px 0 20px
					
			p
.main-footer__social
	text-align center
	.social__buttons
		font-size 26px
		text-align center		
		a
			color: #fff
			margin-right 25px
			transition color .25s ease
			&:last-child
				margin-right 0	
			&:hover
				color: accent						
.main-footer__address
	text-align right
	
.copyright
	text-transform uppercase
	font-size 14px
	background-color: #1e292f
	border-bottom: 2px accent solid
	height 62px
	display flex
	align-items center
	justify-content center
	p
		text-align center
		color #fff
		letter-spacing: .2em