.our-jobs
	//height 980px
	background-size cover
	padding-top 60px
	padding-bottom 65px
	text-align center
	

		
.container_wide
	max-width 1410px
	margin-top 55px
	display flex
	justify-content space-between
	flex-wrap wrap
	.our-jobs__item
		position relative
		display flex
		align-items center
		justify-content center
		width 460px
		height 320px
		background-color: dark-blue
		margin-bottom 15px
		margin-right 5px
		
		&_second
			width 450px
		&_third
			margin-right 0	
		&:hover
			cursor: default
			.item__description
				opacity 1
		img
			width 60px
			height: auto
		.item__description
			padding 18px 0 0 60px
			position absolute
			bottom 0
			left 0
			width 100%
			height 100px
			background-color: #d4d7d8
			opacity: 0
			transition all .25s ease
			text-align left
			letter-spacing: .06em
			h3
				
				text-transform uppercase
				font-family: boldFont
				font-size 18px
				color: dark-blue
				margin-bottom 10px
			img
				width 30px
				height auto
			p
				color: #7b7b7b
				text-transform uppercase
				font-size 16px	
				margin-top 10px